@import "colors.rasi"

* {
	background-color: transparent;
	font: "Ubuntu 14";
	color: white;
}

window {
	background-color: @background;
}

mainbox {
	children: [inputbar, message, listview];
	spacing: 20px;
	padding: 30px;
}

inputbar {
	children: [textbox-prompt-colon, entry];
}

textbox-prompt-colon {
	expand: false;
	str: "Run :";
	margin: 0 1ch 0 0;
}

entry {
	text-color: #ffffff;
}

element {
	padding: 5px;
}

element-icon {
	size: 2.1ch;
	margin: 0 10px;
}

element selected {
	background-color: @selected;
}
