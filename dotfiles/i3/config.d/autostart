# Top status bar
exec --no-startup-id polybar top

# Compositor (transparency)
exec --no-startup-id picom

# Notification daemon
exec --no-startup-id dunst

# Low battery notification
exec --no-startup-id batsignal -b -w 20 -I /usr/share/icons/Papirus-Dark/symbolic/status/battery-caution-symbolic.svg

# Authentication prompt daemon
exec --no-startup-id /usr/lib/polkit-kde-authentication-agent-1

# Network applet
exec --no-startup-id nm-applet

# Bluetooth applet
exec --no-startup-id blueman-applet

# Wallpaper
exec --no-startup-id nitrogen --restore

# Auto lock screen
exec --no-startup-id xss-lock --transfer-sleep-lock -- ~/.config/i3/scripts/lockscreen.sh
